<div ng-app="app">
  {{ 1 + 1 }}
  <div ng-controller="thingsCtrl">
    {{ message }}
    <input ng-model="message">
  

    <div class="reviews">
      <h2>AngularJS Reviews</h2>
        <ul>
          <li>{{ review1 }}</li>
          <li>{{ review2 }}</li>
          <li>{{ review3 }}</li>
        </ul>
.
        <ul>
          <li ng-repeat="review in reviews">
           Review {{ review.text }}
           <br>
           Reviewer {{ review.reviewer }}
           <br>
           Rating {{ review.rating }}
           <br>
          <input ng-model="review.text"></li>
        </ul>

       Review: <input ng-model="newReviewText">
       Reviewer: <input ng-model="newReviewReviewer">
       Rating: <input ng-model="newReviewRating">
        <br>
        <button ng-click="addReview(newReviewText, newReviewReviewer, newReviewRating)">Add Review</button>
        
    </div>

    <div class="todo">
      <h2>To Do List</h2>
        <ul> 
          <li ng-repeat = "todo in todos track by $index" ng-click="deleteTask($index)"> {{ todo }}
          <input ng-model="todo"></li>
        </ul>

        <input ng-model="newTask">
        <button ng-click="addTask(newTask)">Add Task</button>

        <button ng-click="clearTask(newTask)" value = "delete" >Clear Task</button>
        
        <button ng-click="removeTask(newTask)">Delete Task</button>

    </div>

    <div>
      <h1>Items</h1>
      <div>
        Item: <input ng-model="newItemName">
        <br>
        <button ng-click="addItem(newItemName)">Add Item</button>
      </div>

      <ul>
        <li ng-repeat="item in items">
          <p ng-click="toggle(item)"
           ng-class="{strike: item.completed}"> {{item.item}}</p>
        </li>
      </ul>
      <h3>Items Completed {{ numberOfIncompleteItems()}}

      <div>
        <button ng-click="removeCompletedItems()">Clear Completed Items
    </div>


  </div>

</div>